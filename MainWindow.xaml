<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Task Manager" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Panel đăng nhập -->
        <Grid x:Name="LoginPanel" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Row="0" 
                      Text="Task Manager Login" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"
                      Margin="0,20,0,30"/>

            <!-- Username -->
            <StackPanel Grid.Row="1" Margin="0,5" HorizontalAlignment="Center">
                <TextBlock Text="Username" FontSize="14"/>
                <TextBox x:Name="txtUsername" 
                        Width="300" 
                        Height="30" 
                        FontSize="14"
                        Padding="5"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Grid.Row="2" Margin="0,5" HorizontalAlignment="Center">
                <TextBlock Text="Password" FontSize="14"/>
                <PasswordBox x:Name="txtPassword" 
                           Width="300" 
                           Height="30" 
                           FontSize="14"
                           Padding="5"/>
            </StackPanel>

            <!-- Thông báo lỗi -->
            <TextBlock x:Name="txtError" 
                      Grid.Row="3" 
                      Foreground="Red" 
                      TextAlignment="Center"
                      Margin="0,10,0,0"
                      Visibility="Collapsed"/>

            <!-- Nút đăng nhập -->
            <Button x:Name="btnLogin" 
                   Grid.Row="4" 
                   Content="Login" 
                   Width="100" 
                   Height="35" 
                   Margin="0,20,0,0"
                   FontSize="14"
                   Click="btnLogin_Click"
                   HorizontalAlignment="Center"
                   Background="#FF2196F3"
                   Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- Panel chính (ẩn ban đầu) -->
        <Grid x:Name="MainPanel" Visibility="Collapsed">
            <TextBlock Text="Welcome to Task Manager!" 
                      FontSize="20" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
            <!-- Thêm nội dung chính của ứng dụng ở đây -->
        </Grid>
    </Grid>
</Window>